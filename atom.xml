</span><span class='line'>    <span class="nx">$</span><span class="p">(</span><span class="s1">&#39;.toggle-sidebar&#39;</span><span class="p">).</span><span class="nx">bind</span><span class="p">(</span><span class="s1">&#39;click&#39;</span><span class="p">,</span> <span class="kd">function</span><span class="p">(</span><span class="nx">e</span><span class="p">)</span> <span class="p">{</span>
